         data-client-key="SB-Mid-client-CJhXK_QpQfD8Is7A"></script>
    <script>
        document.getElementById('pay-btn').onclick = async () => {
          const resp = await fetch('/api/payment/token/snap', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              OrderId: 'ORDER-123',
              Amount: 50000,
              Customer: { first_name:'John', last_name:'Doe', email:'a@b.com', phone:'081234' }
            })
          });
          const { token } = await resp.json();
          snap.pay(token);
        };
    </script>
}
